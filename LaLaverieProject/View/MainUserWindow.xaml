<Window x:Class="LaLaverieProject.View.MainUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaLaverieProject.View"
        mc:Ignorable="d"
        Background="{DynamicResource WindowBrush}"
        Icon="../Images/icon.png"
        Title="La Laverie - Connexion" MaxHeight="269" MaxWidth="600" MinHeight="269" MinWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="169"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Image Source="../Images/Titre.png" />

        <StackPanel Grid.Row="1" Style="{DynamicResource stackPanelUser}">
            <Button Content="Nouveau client" Command="{Binding OnNewClientCommand}"/>
            <Button Content="Connexion" Command="{Binding OnConnexionCommand}"/>
        </StackPanel>
    </Grid>
</Window>
