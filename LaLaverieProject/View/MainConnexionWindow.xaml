<Window x:Class="LaLaverieProject.View.MainConnexionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaLaverieProject.View"
        mc:Ignorable="d"
        Background="{DynamicResource WindowBrush}"
        Title="La Laverie - Connexion" MaxHeight="400" MaxWidth="300" MinHeight="400" MinWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="169"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        
        <Image Source="../Images/Titre.png" />

        <TextBox Grid.Row="1" Style="{DynamicResource connexion}" Text="{Binding NomClient}"/>
        <TextBox Grid.Row="2" Style="{DynamicResource connexion}" Text="{Binding MdpClient}"/>
        <Button Grid.Row="3" Content="Connexion" Command="{Binding OnConnexionCommand}"/>
    </Grid>
</Window>
